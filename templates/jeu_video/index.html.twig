{% extends 'base.html.twig' %}

{% block title %}Liste de jeu vidéo{% endblock %}

{% block breadcrumb %}
    {{ knp_menu_render(breadcrumb) }}
{% endblock %}

{% block body %}
    <h1>Liste de jeu vidéo</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Genre</th>
                <th>Developpeur</th>
                <th>Editeur</th>
                <th>Date de sortie</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Utilisateurs possédant ce jeu</th> 
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jeu_video in jeu_videos %}
            <tr>
                <td>{{ jeu_video.id }}</td>
                <td>{{ jeu_video.titre }}</td>
                <td>{{ jeu_video.genre.nom }}</td>
                <td>{{ jeu_video.developpeur }}</td>
                <td>{{ jeu_video.editeur.nom }}</td>
                <td>{{ jeu_video.dateSortie ? jeu_video.dateSortie|date('d/m/Y') : '' }}</td>
                <td>{{ jeu_video.prix|number_format(2, ',', ' ') }} €</td>
                <td>{{ jeu_video.description }}</td>
                
                <td>
                    <ul>
                    {% for collect in jeu_video.collects %}
                        <li>
                            {{ collect.utilisateur.pseudo }} 
                            ({{ collect.statut.getLabel() }})
                        </li>
                    {% else %}
                        <li>Personne</li>
                    {% endfor %}
                    </ul>
                </td>

                <td>
                    <a href="{{ path('app_jeu_video_show', {'id': jeu_video.id}) }}">Consulter</a>
                    <a href="{{ path('app_jeu_video_edit', {'id': jeu_video.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_jeu_video_new') }}">Ajouter un jeu</a>
{% endblock %}