{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block breadcrumb %}
    {{ knp_menu_render(breadcrumb) }}
{% endblock %}

{% block body %}
    <h1>Genre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ genre.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ genre.description }}</td>
            </tr>
            <tr>
                <th>Est actif</th>
                <td>{{ genre.actif ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ genre.createdAt ? genre.createdAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ genre.updateAt ? genre.updateAt|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="page-actions">
        <a class="btn btn-secondary" href="{{ path('app_genre_index') }}">Retourner à la liste</a>
        <a class="btn btn-primary" href="{{ path('app_genre_edit', {'id': genre.id}) }}">Modifier</a>
        {{ include('genre/_delete_form.html.twig') }}
    </div>
{% endblock %}
